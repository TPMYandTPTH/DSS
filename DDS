    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('current-year').textContent = new Date().getFullYear();

        const fileInput = document.getElementById('file-input');
        const uploadZone = document.getElementById('upload-zone');
        const fileName = document.getElementById('file-name');
        const splitBtn = document.getElementById('split-btn');
        const progressSection = document.getElementById('progress-section');
        const resultSection = document.getElementById('result-section');
        const fileCount = document.getElementById('file-count');
        const downloadBtn = document.getElementById('download-btn');
        const resetBtn = document.getElementById('reset-btn');
        const alertContainer = document.getElementById('alert-container');
        const statsGrid = document.getElementById('stats-grid');
        const fileList = document.getElementById('file-list');

        let selectedFile = null;
        let processedFiles = [];

        uploadZone.addEventListener('click', () => fileInput.click());
        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });
        uploadZone.addEventListener('dragleave', () => uploadZone.classList.remove('dragover'));
        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
            if (e.dataTransfer.files.length > 0) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect();
            }
        });

        fileInput.addEventListener('change', handleFileSelect);

        function handleFileSelect() {
            if (fileInput.files.length > 0) {
                selectedFile = fileInput.files[0];
                const sizeMB = (selectedFile.size / 1024 / 1024).toFixed(2);
                
                if (!selectedFile.name.endsWith('.docx')) {
                    showAlert('Please select a valid Word document (.docx)', 'danger');
                    resetFileInput();
                    return;
                }
                
                fileName.textContent = `${selectedFile.name} (${sizeMB} MB)`;
                splitBtn.disabled = false;
            } else {
                resetFileInput();
            }
        }

        function resetFileInput() {
            selectedFile = null;
            fileName.textContent = '';
            splitBtn.disabled = true;
        }

        splitBtn.addEventListener('click', async () => {
            if (!selectedFile) return;

            splitBtn.disabled = true;
            progressSection.style.display = 'block';
            resultSection.style.display = 'none';
            alertContainer.innerHTML = '';

            console.log('='.repeat(80));
            console.log('STARTING DOCUMENT PROCESSING');
            console.log('='.repeat(80));

            try {
                const arrayBuffer = await selectedFile.arrayBuffer();
                const docZip = await JSZip.loadAsync(arrayBuffer);
                const splitFiles = await splitDocument(docZip);
                processedFiles = splitFiles;
                
                fileCount.textContent = splitFiles.length;
                
                let fileListHtml = '<strong>Created Files:</strong><br>';
                splitFiles.forEach((file, index) => {
                    fileListHtml += `<div class="file-list-item">${index + 1}. ${file.name}</div>`;
                });
                fileList.innerHTML = fileListHtml;
                
                statsGrid.innerHTML = `
                    <div class="stat-card">
                        <div class="stat-number">${splitFiles.length * 2}</div>
                        <div class="stat-label">Total Pages</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number">${splitFiles.length}</div>
                        <div class="stat-label">Files Created</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number">2</div>
                        <div class="stat-label">Pages per File</div>
                    </div>
                `;
                
                progressSection.style.display = 'none';
                resultSection.style.display = 'block';
                showAlert(`Successfully created ${splitFiles.length} files!`, 'success');
            } catch (error) {
                console.error('ERROR:', error);
                progressSection.style.display = 'none';
                showAlert('Error: ' + error.message, 'danger');
                splitBtn.disabled = false;
            }
        });

        // Helper function to get all text from an element
        function getAllText(element) {
            let text = '';
            const textNodes = element.querySelectorAll('*');
            for (let node of textNodes) {
                if (node.tagName && node.tagName.toLowerCase().endsWith(':t')) {
                    text += node.textContent || '';
                }
            }
            return text;
        }

        // Helper function to get text from last N runs
        function getTextFromLastRuns(para, numRuns = 5) {
            const runs = para.querySelectorAll('*');
            const runElements = [];
            
            for (let elem of runs) {
                if (elem.tagName && elem.tagName.toLowerCase().endsWith(':r')) {
                    runElements.push(elem);
                }
            }
            
            let text = '';
            const startIdx = Math.max(0, runElements.length - numRuns);
            for (let i = startIdx; i < runElements.length; i++) {
                text += getAllText(runElements[i]);
            }
            
            return text;
        }

        async function splitDocument(docZip) {
            console.log('\n' + '='.repeat(80));
            console.log('STEP 1: LOADING DOCUMENT XML');
            console.log('='.repeat(80));
            
            const docXml = await docZip.file('word/document.xml').async('string');
            const parser = new DOMParser();
            const xmlDoc = parser.parseFromString(docXml, 'text/xml');
            const body = xmlDoc.querySelector('body') || xmlDoc.documentElement;
            
            // Get all paragraphs
            const allElements = body.querySelectorAll('*');
            const allParagraphs = [];
            for (let elem of allElements) {
                if (elem.tagName && elem.tagName.toLowerCase().endsWith(':p')) {
                    allParagraphs.push(elem);
                }
            }
            
            console.log(`Total paragraphs found: ${allParagraphs.length}`);
            
            // STEP 2: Build rId to header mapping
            console.log('\n' + '='.repeat(80));
            console.log('STEP 2: BUILDING RID TO HEADER MAPPING');
            console.log('='.repeat(80));
            
            const relsXml = await docZip.file('word/_rels/document.xml.rels').async('string');
            const relsDoc = parser.parseFromString(relsXml, 'text/xml');
            const relationships = relsDoc.querySelectorAll('Relationship');
            
            const ridToHeader = {};
            for (let rel of relationships) {
                const relId = rel.getAttribute('Id');
                const target = rel.getAttribute('Target');
                if (target && target.includes('header')) {
                    ridToHeader[relId] = 'word/' + target;
                    console.log(`  ${relId} -> ${ridToHeader[relId]}`);
                }
            }
            
            // STEP 3: Build section map
            console.log('\n' + '='.repeat(80));
            console.log('STEP 3: BUILDING SECTION MAP');
            console.log('='.repeat(80));
            
            const sections = [];
            for (let i = 0; i < allParagraphs.length; i++) {
                const para = allParagraphs[i];
                const sectPrElements = para.querySelectorAll('*');
                
                for (let elem of sectPrElements) {
                    if (elem.tagName && elem.tagName.toLowerCase().endsWith(':sectpr')) {
                        // Found section properties
                        const headerRefs = elem.querySelectorAll('*');
                        for (let headerRef of headerRefs) {
                            if (headerRef.tagName && headerRef.tagName.toLowerCase().endsWith(':headerreference')) {
                                // Get the rId attribute
                                const rId = headerRef.getAttribute('r:id') || 
                                           headerRef.getAttribute('w:id') ||
                                           headerRef.getAttributeNS('http://schemas.openxmlformats.org/officeDocument/2006/relationships', 'id');
                                
                                if (rId && ridToHeader[rId]) {
                                    const headerFile = ridToHeader[rId];
                                    sections.push({
                                        endPara: i,
                                        rId: rId,
                                        headerFile: headerFile
                                    });
                                    console.log(`  Section ends at para ${i}: rId=${rId}, header=${headerFile}`);
                                }
                            }
                        }
                    }
                }
            }
            
            console.log(`Total sections found: ${sections.length}`);
            
            // STEP 4: Extract codes from headers
            console.log('\n' + '='.repeat(80));
            console.log('STEP 4: EXTRACTING CODES FROM HEADERS');
            console.log('='.repeat(80));
            
            const headerCodes = {};
            for (const rId in ridToHeader) {
                const headerFile = ridToHeader[rId];
                const code = await extractJobCodeFromHeader(docZip, headerFile);
                headerCodes[headerFile] = code;
                console.log(`  ${headerFile} -> ${code}`);
            }
            
            // STEP 5: Find marker paragraphs
            console.log('\n' + '='.repeat(80));
            console.log('STEP 5: FINDING MARKER PARAGRAPHS');
            console.log('='.repeat(80));
            
            const jdMarkers = [];
            let jobSummaryCount = 0;
            
            for (let i = 0; i < allParagraphs.length; i++) {
                const para = allParagraphs[i];
                const fullText = getAllText(para);
                
                // Check if contains "Job Summary / Overview" or "Job Summary/ Overview"
                if ((fullText.includes('Job Summary / Overview') || fullText.includes('Job Summary/ Overview')) &&
                    fullText.length > 30) {  // Must have more content than just the marker
                    
                    jobSummaryCount++;
                    console.log(`\nPara ${i}: Contains "Job Summary / Overview"`);
                    console.log(`  Full text (first 100 chars): ${fullText.substring(0, 100)}...`);
                    
                    // Extract text from last runs
                    const lastRunsText = getTextFromLastRuns(para, 8);
                    console.log(`  Last runs text: "${lastRunsText}"`);
                    
                    // Clean up - remove "Job Summary / Overview"
                    let clientJobText = lastRunsText.replace(/Job Summary\s*\/?\s*Overview/gi, '').trim();
                    console.log(`  After cleanup: "${clientJobText}"`);
                    
                    // Check if has dash and valid length
                    const hasDash = clientJobText.includes('-') || clientJobText.includes('–') || clientJobText.includes('—');
                    console.log(`  Has dash: ${hasDash}, Length: ${clientJobText.length}`);
                    
                    if (clientJobText && hasDash && clientJobText.length > 3 && clientJobText.length < 100) {
                        // Find which section this belongs to
                        let headerFile = null;
                        for (let section of sections) {
                            if (i <= section.endPara) {
                                headerFile = section.headerFile;
                                console.log(`  Mapped to section ending at para ${section.endPara}: ${headerFile}`);
                                break;
                            }
                        }
                        
                        if (!headerFile && sections.length > 0) {
                            headerFile = sections[0].headerFile;
                            console.log(`  No section found, using first: ${headerFile}`);
                        }
                        
                        const jobCode = headerCodes[headerFile] || 'UNKNOWN';
                        
                        jdMarkers.push({
                            paraIndex: i,
                            text: clientJobText,
                            jobCode: jobCode,
                            headerFile: headerFile
                        });
                        
                        console.log(`  ✓ VALID MARKER: "${clientJobText}" - Code: ${jobCode}`);
                    } else {
                        console.log(`  ✗ INVALID: Not a valid client-job line`);
                    }
                }
            }
            
            console.log('\n' + '='.repeat(80));
            console.log('MARKER SUMMARY');
            console.log('='.repeat(80));
            console.log(`Paragraphs with "Job Summary / Overview": ${jobSummaryCount}`);
            console.log(`Valid JD markers: ${jdMarkers.length}`);
            
            if (jdMarkers.length === 0) {
                throw new Error(`No job descriptions found. Found ${jobSummaryCount} "Job Summary / Overview" paragraphs but none had valid client-job titles.`);
            }
            
            jdMarkers.forEach((m, idx) => {
                console.log(`  ${idx + 1}. Para ${m.paraIndex}: "${m.text}" - ${m.jobCode}`);
            });
            
            // STEP 6: Split and create files
            console.log('\n' + '='.repeat(80));
            console.log('STEP 6: CREATING FILES');
            console.log('='.repeat(80));
            
            const files = [];
            const bodyElements = Array.from(body.children);
            
            for (let i = 0; i < jdMarkers.length; i++) {
                const marker = jdMarkers[i];
                
                // Find start index in body elements
                let startIdx = findElementIndexByParagraphIndex(bodyElements, allParagraphs, marker.paraIndex);
                
                // Find end
                let endIdx;
                if (i + 1 < jdMarkers.length) {
                    endIdx = findElementIndexByParagraphIndex(bodyElements, allParagraphs, jdMarkers[i + 1].paraIndex);
                } else {
                    endIdx = bodyElements.length;
                }
                
                console.log(`  File ${i + 1}: Elements ${startIdx} to ${endIdx} (${endIdx - startIdx} elements)`);
                
                const chunk = bodyElements.slice(startIdx, endIdx);
                
                if (chunk.length === 0) {
                    console.log(`    WARNING: Empty chunk, skipping`);
                    continue;
                }
                
                // Create filename
                const filename = sanitizeFilename(`${marker.text} - ${marker.jobCode}.docx`);
                console.log(`    Filename: ${filename}`);
                
                const blob = await createDocFromChunk(docZip, chunk, xmlDoc);
                files.push({ name: filename, blob: blob });
            }
            
            console.log('\n' + '='.repeat(80));
            console.log(`COMPLETE: Created ${files.length} files`);
            console.log('='.repeat(80));
            
            return files;
        }

        function findElementIndexByParagraphIndex(bodyElements, allParagraphs, targetParaIndex) {
            const targetPara = allParagraphs[targetParaIndex];
            for (let i = 0; i < bodyElements.length; i++) {
                if (bodyElements[i] === targetPara) {
                    return i;
                }
            }
            return 0;
        }

        async function extractJobCodeFromHeader(docZip, headerFile) {
            try {
                const headerXml = await docZip.file(headerFile).async('string');
                const parser = new DOMParser();
                const headerDoc = parser.parseFromString(headerXml, 'text/xml');
                
                // Find all elements
                const allElements = headerDoc.querySelectorAll('*');
                
                // Look for table cells containing "Code:"
                for (let elem of allElements) {
                    const text = getAllText(elem);
                    if (text.includes('Code:')) {
                        const match = text.match(/Code:\s*(.+)/i);
                        if (match && match[1]) {
                            return match[1].trim();
                        }
                    }
                }
            } catch (e) {
                console.log(`Could not extract code from ${headerFile}:`, e);
            }
            
            return 'UNKNOWN';
        }

        function sanitizeFilename(filename) {
            return filename.replace(/[<>:"/\\|?*]/g, '').replace(/\s+/g, ' ').trim().substring(0, 200);
        }

        async function createDocFromChunk(docZip, chunk, originalXmlDoc) {
            const newDoc = originalXmlDoc.cloneNode(true);
            const newBody = newDoc.querySelector('body') || newDoc.documentElement;
            
            // Clear body
            while (newBody.firstChild) {
                newBody.removeChild(newBody.firstChild);
            }
            
            // Add chunk
            chunk.forEach(el => newBody.appendChild(el.cloneNode(true)));
            
            const serializer = new XMLSerializer();
            const newDocXml = serializer.serializeToString(newDoc);
            
            const newZip = new JSZip();
            const copyPromises = [];
            
            docZip.forEach((relativePath, file) => {
                if (relativePath === 'word/document.xml') {
                    newZip.file(relativePath, newDocXml);
                } else {
                    copyPromises.push(
                        file.async('arraybuffer').then(content => {
                            newZip.file(relativePath, content);
                        })
                    );
                }
            });
            
            await Promise.all(copyPromises);
            return await newZip.generateAsync({type: 'blob'});
        }

        downloadBtn.addEventListener('click', async () => {
            const zip = new JSZip();
            processedFiles.forEach(file => zip.file(file.name, file.blob));
            
            const zipBlob = await zip.generateAsync({type: 'blob'});
            const timestamp = new Date().toISOString().replace(/[:.]/g, '-').slice(0, -5);
            saveAs(zipBlob, `TP_JobDescriptions_${timestamp}.zip`);
            
            showAlert('Download started!', 'success');
        });

        resetBtn.addEventListener('click', () => {
            fileInput.value = '';
            resetFileInput();
            resultSection.style.display = 'none';
            alertContainer.innerHTML = '';
            splitBtn.disabled = false;
            processedFiles = [];
        });

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show alert-custom`;
            alertDiv.innerHTML = `${message}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
            alertContainer.appendChild(alertDiv);
            setTimeout(() => alertDiv.remove(), 5000);
        }
    </script>
</body>
</html>
